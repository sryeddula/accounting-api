<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

    <!-- Online Store -->
    <persistence-unit name="receipts">
        <class>com.pecuniara.accounts.rest.model.Document</class>
        <class>com.pecuniara.accounts.rest.model.Receipt</class>
        <class>com.pecuniara.accounts.rest.model.Company</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/sryeddula"/>
            <property name="javax.persistence.jdbc.schema" value="receiptsocr"/>
            <property name="javax.persistence.jdbc.user" value="sryeddula"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>